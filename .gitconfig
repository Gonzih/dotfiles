[user]
  email = gonzih@gmail.com
  name = Max Gonzih

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
  untracked = cyan

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol,space-before-tab

[alias]
  co = checkout
  glog = log --graph
  st = status
  ci = commit
  w = whatchanged
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

[apply]
  whitespace = fix
