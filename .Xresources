URxvt.keysym.M-C-5:command:\033]710;xft:Iosevka Term:style=medium:size=15\007
URxvt.keysym.M-C-6:command:\033]710;xft:Iosevka Term:style=medium:size=16\007
URxvt.keysym.M-C-7:command:\033]710;xft:Iosevka Term:style=medium:size=17\007
URxvt.keysym.M-C-8:command:\033]710;xft:Iosevka Term:style=medium:size=18\007
URxvt.keysym.M-C-9:command:\033]710;xft:Iosevka Term:style=medium:size=19\007

URxvt.scrollBar: false
